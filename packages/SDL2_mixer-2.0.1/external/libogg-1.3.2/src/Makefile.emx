CFLAGS  = -Zmt -O2 -fsigned-char -Wall -I../include
LIBNAME =  ogg.a

CC      = gcc
AR      = ar
RANLIB  = ranlib

LIBOBJ = bitwise.o framing.o

all: $(LIBNAME)

$(LIBNAME): $(LIBOBJ)
	$(AR) cru $(LIBNAME) $(LIBOBJ)
	$(RANLIB) $(LIBNAME)

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	$(RM) *.o
distclean: clean
	$(RM) $(LIBNAME)
