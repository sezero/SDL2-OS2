### remember to run make under decoders/timidity first ###

LIBNAME = SDL2snd
VERSION = 1.0.4
INCPATH = ../../h
LIBPATH = ../../lib

LIBFILE = $(LIBNAME).lib
DLLFILE = $(LIBNAME).dll
LNKFILE = $(LIBNAME).lnk
LIBTIMI = decoders/timidity/timidity.lib

TITLENAME = $(LIBNAME) $(VERSION)

SRCS = aiff.c au.c flac.c midi.c mikmod.c modplug.c mpg123.c ogg.c &
       raw.c shn.c speex.c voc.c wav.c &
       alt_audio_convert.c audio_convert.c SDL_sound.c

OBJS = $(SRCS:.c=.obj)

CFLAGS_BASE = -bt=os2 -d0 -q -bm -5s -fp5 -fpi87 -sg -oteanbmier -ei -j
CFLAGS_BASE+= -DNDEBUG
# include paths:
CFLAGS_BASE+= -I$(%WATCOM)/h/os2 -I$(%WATCOM)/h -I. -I"$(INCPATH)" -I"$(INCPATH)/SDL2"
CFLAGS = $(CFLAGS_BASE) -I"decoders/timidity"
# to build a dll:
CFLAGS+= -bd
# for DECLSPEC:
CFLAGS+= -DBUILD_SDL -DSDL_SOUND_DLL_EXPORTS

#this is noted as experimental:
#CFLAGS+= -DSOUND_USE_ALTCVT=1

CFLAGS+= -DSOUND_SUPPORTS_MPG123 &
          -DSOUND_SUPPORTS_MIKMOD &
          -DSOUND_SUPPORTS_WAV &
          -DSOUND_SUPPORTS_AIFF &
          -DSOUND_SUPPORTS_AU &
          -DSOUND_SUPPORTS_OGG &
          -DSOUND_SUPPORTS_VOC &
          -DSOUND_SUPPORTS_RAW &
          -DSOUND_SUPPORTS_FLAC &
          -DSOUND_SUPPORTS_MIDI
# SOUND_SUPPORTS_SPEEX
# SOUND_SUPPORTS_MODPLUG

LIBS = SDL2.lib FLAC.lib vorbisfile.lib vorbis.lib ogg.lib mpg123.lib mikmod.lib $(LIBTIMI)

.extensions:
.extensions: .lib .dll .obj .c

all: $(DLLFILE) playsound.exe playsound_simple.exe

.c: decoders
.c: playsound

$(LIBFILE): $(DLLFILE)
  @echo * Create library: $@...
  wlib -b -n -q -c -pa -s -t -zld -ii -io $@ $(DLLFILE)

$(DLLFILE): $(OBJS) $(LNKFILE)
  @echo * Link: $@
  wlink @$(LNKFILE)

$(LNKFILE):
  @%create $@
  @%append $@ SYSTEM os2v2_dll INITINSTANCE TERMINSTANCE
  @%append $@ NAME $(LIBNAME)
  @for %i in ($(OBJS)) do @%append $@ FILE %i
  @%append $@ OPTION QUIET
  @%append $@ OPTION DESCRIPTION '@$#icculus org:$(VERSION)$#@Simple DirectMedia Layer, abstract soundfile decoder'
  @%append $@ LIBPATH $(LIBPATH)
  @for %i in ($(LIBS)) do @%append $@ LIB %i
  @%append $@ OPTION MAP=$^&.map
  @%append $@ OPTION ELIMINATE
  @%append $@ OPTION MANYAUTODATA
  @%append $@ OPTION OSNAME='OS/2 and eComStation'
  @%append $@ OPTION SHOWDEAD

.c.obj:
  wcc386 $(CFLAGS) -fo=$^@ $<

# silence pointer signedness warnings (E1181) for these ones:
ogg.obj: decoders/ogg.c
  wcc386 $(CFLAGS) -wcd=1181 -fo=$^@ decoders/ogg.c
wav.obj: decoders/wav.c
  wcc386 $(CFLAGS) -wcd=1181 -fo=$^@ decoders/wav.c

playsound.obj: playsound/playsound.c
  wcc386 $(CFLAGS_BASE) -wcd=136 -DHAVE_SIGNAL_H=1 -DHAVE_SETBUF=1 -DHAVE_ASSERT_H=1 -fo=$^@ $<
playsound_simple.obj: playsound/playsound_simple.c
  wcc386 $(CFLAGS_BASE) -fo=$^@ $<

playsound.exe: $(LIBFILE) playsound.obj
  @echo * Link: $@
  wlink SYS os2v2 LIBPATH $(LIBPATH) LIBR {$(LIBFILE) SDL2.lib} op q op el F {playsound.obj}  N playsound.exe

playsound_simple.exe: $(LIBFILE) playsound_simple.obj
  @echo * Link: $@
  wlink SYS os2v2 LIBPATH $(LIBPATH) LIBR {$(LIBFILE) SDL2.lib} op q op el F {playsound_simple.obj}  N playsound_simple.exe

clean: .SYMBOLIC
  @echo * Clean: $(TITLENAME)
  @if exist *.obj rm *.obj
  @if exist *.err rm *.err
  @if exist *.map rm *.map
  @if exist *.exe rm *.exe
  @if exist $(LNKFILE) rm $(LNKFILE)
  @if exist $(DLLFILE) rm $(DLLFILE)
  @if exist $(LIBFILE) rm $(LIBFILE)
